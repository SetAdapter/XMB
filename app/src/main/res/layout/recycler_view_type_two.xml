<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black"
            android:text="2018年5月8日14:14:25"/>

        <TextView
            android:id="@+id/tv_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_deep_red"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/sp_12"
            android:text="交易成功"/>


    </RelativeLayout>

    <com.lzy.ninegrid.NineGridView
        android:background="@color/BgColor"
        android:id="@+id/nine_grid_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_medium_small"
        android:layout_marginRight="@dimen/spacing_medium_small"
        app:ngv_gridSpacing="4dp"
        app:ngv_maxSize="9"
        app:ngv_mode="grid"
        app:ngv_singleImageRatio="1"
        app:ngv_singleImageSize="250dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/tv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/sp_12"
            android:text="共1计 应付总额：¥ 88.00"
            android:layout_gravity="right"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="right"
        >

        <TextView
            android:id="@+id/tv_logistics"
            android:layout_width="95dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_order"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_12"
            android:text="查看物流"/>

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="95dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_order"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="@dimen/dp_12"
            android:text="再次购买"/>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:background="@color/light_white"
        android:layout_marginTop="5dp"/>

</LinearLayout>