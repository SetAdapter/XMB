<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_title" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/BgColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/divider_bg"
            android:orientation="vertical"
            android:showDividers="middle">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/detail_iv"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_launcher_background"
                tools:ignore="VectorDrawableCompat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCommodityName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="商品名称"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvCommodityUnitPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingLeft="12dp"
                    android:text="￥0.02"
                    android:textColor="#ff4200"
                    android:textSize="16sp" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/tvFreight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运费：￥5"
                    android:textColor="@color/txtLight"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="销量"
                    android:textColor="@color/txtLight"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@mipmap/guarantee"
                    android:drawablePadding="4dp"
                    android:text="担保交易"
                    android:textColor="@color/txtLight"
                    android:textSize="12sp" />

            </RelativeLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <TextView
                android:id="@+id/tvSpecifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/left_button"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="8dp"
                android:text="规格"
                android:textSize="16sp" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <TextView
                android:id="@+id/tvShopping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/shopping"
                android:drawablePadding="4dp"
                android:drawableRight="@mipmap/left_button"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="8dp"
                android:text="商城"
                android:textColor="@color/txtSecondColor"
                android:textSize="16sp" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center"-->
                <!--android:background="@drawable/shape_bottom_line"-->
                <!--android:gravity="center"-->
                <!--android:paddingBottom="8dp"-->
                <!--android:paddingTop="8dp"-->
                <!--android:text="温馨提示"-->
                <!--android:textColor="#ff4200"-->
                <!--android:textSize="16sp" />-->

            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:paddingBottom="8dp"-->
                <!--android:paddingLeft="12dp"-->
                <!--android:paddingRight="12dp"-->
                <!--android:paddingTop="8dp"-->
                <!--android:text="【特别提醒】\n1、该商品可直接修改价格上架销售，或删除。\n2、实物购买时需要填写收货地址，订单可通过快递发货、-->
                <!--送货上门。\n3、付款成功后，可在“收入、提现”模块查询交易明细。订单完成发货"-->
                <!--android:textColor="#ff4200"-->
                <!--android:textSize="12sp" />-->

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ff9700"
            android:gravity="center"
            android:padding="12dp"
            android:text="加入购物车"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvPurchase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ff5000"
            android:gravity="center"
            android:padding="12dp"
            android:text="立即购买"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>

